@model List<Banner>
@*
    hero component
*@
<section id="hero" class="hero section">
    @foreach (var item in Model)
    {
        <img src="@item.CoverImgUrl" alt="" data-aos="fade-in">

        <div class="container text-center" data-aos="zoom-out" data-aos-delay="100">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h2 style="color:aliceblue">@item.NameSurname</h2>
                    <p style="color:aliceblue">@item.Title</p>
                    <a href="/Default/Index/About" class="btn-get-started"> Hakkımda</a>
                </div>
            </div>
        </div>
    }

   

</section>